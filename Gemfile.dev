source "https://rubygems.org"
# Development Gemfile - uses just-the-docs gem for local development
# This avoids SSL issues when fetching remote themes locally

# BUNDLE_GEMFILE=Gemfile.dev bundle install
# BUNDLE_GEMFILE=Gemfile.dev bundle exec jekyll serve --livereload --config _config.yml,_config.dev.yml

# Use Jekyll directly for development
gem "jekyll", "~> 4.4.1"

# This is the default theme for new Jekyll sites. You may change this to anything you like.
gem "minima", "~> 2.5"

# If you have any plugins, put them here!
gem "just-the-docs"

group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
end

# Windows and JRuby does not include zoneinfo files, so bundle the tzinfo-data gem
# and associated library.
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Performance-booster for watching directories on Windows
gem "wdm", "~> 0.1", :platforms => [:mingw, :x64_mingw, :mswin]

# Lock `http_parser.rb` gem to `v0.6.x` on JRuby builds since newer versions of the gem
# do not have a Java counterpart.
gem "http_parser.rb", "~> 0.6.0", :platforms => [:jruby]
